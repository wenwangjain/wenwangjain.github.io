      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;T02&lt;/td&gt;
          &lt;td&gt;数学系&lt;/td&gt;
      &lt;/tr&gt;
  &lt;/tbody&gt;
&lt;/table&gt;
  &lt;/div&gt;
  &lt;div style=&#34;flex: 20%; padding: 10px; box-sizing: border-box; text-align: center;&#34;&gt;
&lt;table&gt;
  &lt;thead&gt;
      &lt;tr&gt;
          &lt;th&gt;研究生ID&lt;/th&gt;
          &lt;th&gt;导师ID&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
