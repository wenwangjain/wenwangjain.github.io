from sklearn import datasets

# 导入鸢尾花分类数据集
iris = datasets.load_iris()

# 打印数据描述
#print(iris.DESCR)

# 打印数据字典中的关键字
print('---------- iris.keys() ----------')
print(iris.keys(), '\n')

# 特征值
features = iris.data
print('---------- features[0:10] ----------')
print(features[0:10], '\n')

# 标签值
target = iris.target
print('---------- target[0:10] ----------')
print(target[0:10], '\n')

# 特征名称
feature_names = iris.feature_names
print('---------- feature_names ----------')
print(feature_names, '\n')

# 标签名称
target_names = iris.target_names
print('---------- target_names ----------')
print(target_names, '\n')





